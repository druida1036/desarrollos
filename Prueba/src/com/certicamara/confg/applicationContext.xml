<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="tableroCaro" class="com.certicamara.modelo.TableroCaro">
	</bean>

	<bean id="operacionFactory" class="com.certicamara.command.OperacionFactory">
	</bean>

	<bean id="operacion" factory-method="getOperacion" factory-bean="operacionFactory" scope="prototype">
		<constructor-arg name="comando" value="#{tableroCaro.instruccion}"></constructor-arg>
		<constructor-arg ref="tableroCaro"></constructor-arg>
	</bean>

</beans>